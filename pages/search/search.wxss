page{
  background-color: #dedede;
  padding: 20rpx;
}
.search_row{
  height: 60rpx;
  display: flex;
}
.search_row input{
  border-radius: 10rpx;
  margin-right: 20rpx;
  flex: 4;
  height: 100%;
  background-color: #fff;
  padding-left: 20rpx;
}
.search_row button{
  flex: 1;
  width: 110rpx;
  height: 100%;
  font-size: 24rpx;
  padding: 0;
  margin: 0 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
}

.search_content{
  margin-top: 20rpx;
}
.search_content .search_item{
  background-color: #fff;
  font-size: 24rpx;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}